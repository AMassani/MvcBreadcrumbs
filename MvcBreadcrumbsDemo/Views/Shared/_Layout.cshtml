<!DOCTYPE html>
<html>
<head>
	<title>@ViewBag.Title</title>
	<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
	<script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
</head>

<body>
	<hr>
	@{
		var breadcrumbs = MvcBreadcrumbs.BreadcrumbTrail.GetInstance(MvcBreadcrumbsDemo.Breadcrumbs.Builder.CreateSiteMap);
		@breadcrumbs.RenderHtml(Request.RequestContext, Html);
	}
	<hr>
	@RenderBody()
</body>
</html>
